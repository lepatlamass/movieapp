<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:anndroid="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:adjustViewBounds="true"
    android:background="@color/colorAccent">

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin_top_title"
        card_view:cardCornnerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:src="@drawable/youtube"
                android:id="@+id/thumbnail"
                android:layout_marginLeft="@dimen/movie_detail_margin_left"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/movie_detail_margin_left" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_margin_left"
                android:paddingRight="@dimen/movie_detail_margin_left"
                android:paddingTop="@dimen/movie_detail_margin_left"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_toEndOf="@id/thumbnail"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
